<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_white"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TableRow
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_dark"
                android:text="我的位置"
                android:layout_marginRight="5dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/start"
                />
            <TextView
                android:id="@+id/tv_my_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_grey"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_dark"
                android:text="目的考场"
                android:layout_marginRight="5dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/end"
                />
            <TextView
                android:id="@+id/tv_my_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_grey"
                android:layout_weight="1"
                />
        </TableRow>
    </TableLayout>
    <View
       style="@style/normal_line1"/>
    <TextView
        android:id="@+id/tv_stutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_withline_theme"
        android:text="未完成"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textSize="12sp"
        android:textColor="@color/themecolor_text"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        />

</LinearLayout>