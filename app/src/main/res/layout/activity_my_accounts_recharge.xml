<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/whitebg_with_greyline_topbottom"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        >
        <TextView
            style="@style/normal_msg1"
            android:text="充值金额（元）"
            android:textColor="@color/light_dark"
            android:layout_width="wrap_content"
            />
        <EditText
            android:id="@+id/edit_money"
            style="@style/normal_EditText_nobg"
            android:hint="@string/recharge_money_hint"
            android:inputType="numberDecimal"
            />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whitebg_with_greyline_topbottom"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        >
        <RadioButton
            android:id="@+id/rb_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@mipmap/pay_wechat"
            android:text="微信支付"
            android:drawableRight="@drawable/imagebutton_radiobutton"
            android:layout_marginTop="5dp"
            android:textColor="@color/light_dark"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:paddingRight="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <View
            style="@style/normal_line2"/>
        <RadioButton
            android:id="@+id/rb_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@mipmap/pay_alipay"
            android:text="支付宝"
            android:textColor="@color/light_dark"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/imagebutton_radiobutton"
            android:paddingRight="30dp"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
    </RadioGroup>
    <Button
        android:id="@+id/btn_nextstep"
        style="@style/button_theme"
        android:layout_margin="35dp"
        android:text="充值"
        />

</LinearLayout>
