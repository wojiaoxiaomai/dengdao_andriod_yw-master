<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <View
            style="@style/normal_line1"
            />
        <TableRow
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >
            <TextView
                style="@style/normal_TextView"
                android:text="@string/true_name"
                />
            <EditText
                android:id="@+id/edit_truename"
                style="@style/normal_EditText"
                android:hint="请输入真实姓名"
                android:inputType="number"
                android:background="@null"
                />
        </TableRow>
        <View
            style="@style/normal_line1"
            />

        <View
            style="@style/normal_line1"
            android:layout_marginTop="10dp"
            />
        <TableRow
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >
            <TextView
                style="@style/normal_TextView"
                android:text="@string/IDCard"
                />
            <EditText
                android:id="@+id/edit_IDCardNum"
                style="@style/normal_EditText"
                android:hint="请输入身份证号"
                android:inputType="textPassword"
                android:background="@null"
                />
        </TableRow>
        <View
            style="@style/normal_line1"
            />
    </TableLayout>

    <TextView
        style="@style/normal_TextView"
        android:text="人车照"
        android:padding="10dp"
        />
    <ImageView
        android:id="@+id/iv_carandperson"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/car_person"
        />
    <TextView
        style="@style/text_grey_prompt"
        android:text="注：用户站在车前45度角"
        android:padding="10dp"
        />
</LinearLayout>