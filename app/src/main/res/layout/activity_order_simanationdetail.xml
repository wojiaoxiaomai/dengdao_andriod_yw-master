<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebg_with_greyline_topbottom"
            android:layout_marginTop="10dp"
            >
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="学员姓名"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@mipmap/st_name_order"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:id="@+id/tv_st_name"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    android:hint="请输入姓名"
                    />
            </TableRow>
            <View
                style="@style/normal_line1"/>
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="@string/IDCard"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@mipmap/st_idno_order"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:id="@+id/tv_st_idno"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    android:hint="请输入身份证号"
                    />
            </TableRow>
            <View
                style="@style/normal_line1"/>
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="@string/client_tel"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@mipmap/st_tel_order"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:id="@+id/tv_st_tel"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    android:hint="请输入联系电话"
                    />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/whitebg_with_greyline_topbottom"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_dark"
                    android:text="订单编号:"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/theme_grey"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/whitebg_with_greyline_bot"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_dark"
                    android:text="订单时间:"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/theme_grey"
                    />
            </TableRow>
        </TableLayout>

        <!--教练资料-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebg_with_greyline_topbottom"
            android:layout_marginTop="10dp"
            >
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="@string/coach_name"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_st_coach_name"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    />
            </TableRow>
            <View
                style="@style/normal_line1"/>
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="@string/client_tel"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_st_coach_idno"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    />
            </TableRow>
            <View
                style="@style/normal_line1"/>
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="@string/owerschool"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_st_coach_school"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    />
            </TableRow>
        </TableLayout>

        <!--考场资料-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebg_with_greyline_topbottom"
            android:layout_marginTop="10dp"
            >
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="考场名称"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_examroom_name"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    />
            </TableRow>
            <View
                style="@style/normal_line1"/>
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="驾照类型"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:id="@+id/tv_drivinglicense"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    />
            </TableRow>
            <View
                style="@style/normal_line1"/>
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="考场费用"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_st_examroom_money"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    android:textColor="@color/themecolor_text"
                    />
            </TableRow>
            <View
                style="@style/normal_line1"/>
            <TableRow
                >
                <TextView
                    style="@style/normal_TextView"
                    android:text="服务费用"
                    android:textColor="@color/light_dark"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_st_examroom_service_money"
                    style="@style/normal_EditText_nobg"
                    android:background="@null"
                    android:textColor="@color/themecolor_text"
                    />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/bt_pay"
            style="@style/button_theme"
            android:text="立即支付"
            android:layout_margin="20dp"
            />
    </LinearLayout>
</ScrollView>