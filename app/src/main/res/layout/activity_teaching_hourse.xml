<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/themecolor_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            >
            <ImageButton
                android:id="@+id/ib_last"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@android:color/transparent"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/chocolate"
                android:layout_toRightOf="@id/ib_last"
                />
            <ImageButton
                android:id="@+id/ib_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_right"
                android:layout_alignParentRight="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@android:color/transparent"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/chocolate"
                android:layout_toLeftOf="@id/ib_next"
                />
            <TextView
                android:id="@+id/tv_time_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="2016年02月"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/time_day"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <View
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        />
                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="48dp"
                        android:text="上午"
                        android:gravity="center"
                        android:textSize="@dimen/text_16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="48dp"
                        android:text="下午"
                        android:gravity="center"
                        android:textSize="@dimen/text_16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="48dp"
                        android:text="晚上"
                        android:gravity="center"
                        android:textSize="@dimen/text_16sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/id_recyclerview_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:scrollbars="none" />
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="说明：一人一车模式，1/3：已约1学时/上限3学时"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/tv_grey"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            >
            <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/rectangle_white_with_greyline"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tv_grey"
                android:text="可选时间"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/rectangle_red_with_greyline"
                android:text="@string/select_time_fail"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tv_grey"
                android:text="不可选时间"
                android:layout_marginRight="8dp"
                />
            <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/rectangle_green_with_greyline"
                android:layout_margin="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tv_grey"
                android:text="已选时间"
                android:layout_marginRight="8dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_select_day"
            android:text="@string/teaching_hour_selectime"
            android:textColor="@color/light_dark"
            android:background="@drawable/bg_withline_white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_14sp"
            android:gravity="center_vertical"
            />
        <com.choucheng.ijiaolian_coach.definewidget.MyListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:fadingEdge="none"
            android:divider="@color/white"
            android:dividerHeight="10dp"
            />
    </LinearLayout>

</ScrollView>