<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.choucheng.ijiaolian_coach.definewidget.swipelistview.SwipeMenuListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/normal_bg"
            android:dividerHeight="10dp" />
        <LinearLayout
            android:id="@+id/no_address_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/normal_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/per_address_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="30dp"
                android:text="还没有收货地址哦"
                android:textColor="@color/theme_grey"
                android:textSize="@dimen/text_18sp" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>