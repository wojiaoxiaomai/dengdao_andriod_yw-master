<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/theme_grey"
        android:text="@string/exam_simulation_promt_2"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        >
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/themecolor_text"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/light_dark"
            android:text="模拟考试科目"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <View
        style="@style/normal_line1"/>
    <RadioGroup
        android:id="@+id/rg_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:padding="@dimen/distance_10"
        >
        <RadioButton
            android:id="@+id/rb_km2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="科目二"
            android:button="@null"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_theme"
            android:textColor="@drawable/text_greywithe_style"

            />
        <RadioButton
            android:id="@+id/rb_km3"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="科目三"
            android:button="@null"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/button_theme"
            android:textColor="@drawable/text_greywithe_style"
            android:layout_marginLeft="20dp"
            />
    </RadioGroup>

</LinearLayout>